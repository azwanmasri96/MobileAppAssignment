<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_mb"
    tools:context=".userSignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageButton
            android:id="@+id/ib_profPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_profilepicture" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Profile Picture"
            android:textColor="@android:color/background_light"
            app:fontFamily="@font/quicksand_light"/>

        <EditText
            android:id="@+id/user_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textColor="@android:color/holo_blue_bright"
            android:textColorHint="@android:color/background_light"
            app:fontFamily="@font/quicksand_light" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/holo_blue_bright"
            android:textColorHint="@android:color/background_light"
            app:fontFamily="@font/quicksand_light" />

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:textColor="@android:color/holo_blue_bright"
            android:textColorHint="@android:color/background_light"
            app:fontFamily="@font/quicksand_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
            android:id="@+id/sp_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/gender_arrays"/>

            <EditText
                android:id="@+id/et_age"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Age (Optional)"
                android:inputType="numberDecimal"
                android:textColor="@android:color/holo_blue_bright"
                android:textColorHint="@android:color/background_light"
                app:fontFamily="@font/quicksand_light" />
        </LinearLayout>
        <Spinner
            android:id="@+id/sp_occupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/occupation_arrays"
            android:outlineAmbientShadowColor="@android:color/black" />

        <EditText
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@android:color/holo_blue_bright"
            android:textColorHint="@android:color/background_light"
            app:fontFamily="@font/quicksand_light" />

        <EditText
            android:id="@+id/et_cpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@android:color/holo_blue_bright"
            android:textColorHint="@android:color/background_light"
            app:fontFamily="@font/quicksand_light" />
        <Button
            android:id="@+id/user_btn_signUp"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="#0075FF"
            android:text="SIGN UP"
            android:textColor="@android:color/background_light"
            app:fontFamily="@font/quicksand_light"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>
</ScrollView>